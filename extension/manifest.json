{
  "name": "My Little Face When",
  "description": "Search the popular reaction image database!",
  "version": "0.1.2",
  "manifest_version": 2,

  "permissions": [
    "tabs",
    "webNavigation",
    "clipboardWrite",
    "clipboardRead",
    "http://mylittlefacewhen.com/"
  ],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon-128.png"
  },

  // Omnibox search
  "omnibox": {
    "keyword": "mlfw"
  },

  "background": {
    "persistent": false,
    "page": "html/background.html"
  },

  // Browser Action with search
  "browser_action": {
    "default_icon": {
      "19": "icon-128.png",
      "38": "icon.png"
    },
    "default_title": "My Little Face When",
    "default_popup": "html/popup.html"
  }
}