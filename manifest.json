{
  "name": "My Little Face When",
  "description": "Search the popular reaction image database!",
  "version": "0.1.2",
  "manifest_version": 2,

  "permissions": [
    "tabs",
    "webNavigation",
    "clipboardWrite",
    "clipboardRead",
    "http://mylittlefacewhen.com/"
  ],

  "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ https://netdna.bootstrapcdn.com/; object-src 'self'",

  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon-128.png"
  },

  // Omnibox search
  "omnibox": {
    "keyword": "mlfw"
  },

  "background": {
    "persistent": false,
    // "scripts": [
    //   "background/background.js"
    // ]
    "page": "background/background.html"
  },

  // Browser Action with search
  "browser_action": {
    "default_icon": {
      "19": "images/icon-128.png",
      "38": "images/icon.png"
    },
    "default_title": "My Little Face When",
    "default_popup": "popup/popup.html"
  }
}