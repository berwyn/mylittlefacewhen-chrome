{
  "name": "My Little Face When",
  "description": "Search the popular reaction image database!",
  "version": "0.1.1",
  "manifest_version": 2,

  "permissions": [
    "tabs",
    "webNavigation",
    "http://mylittlefacewhen.com/"
  ],

  "icons": {
    "16": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon-128.png"
  },

  // Omnibox search
  "omnibox": {
    "keyword": "mlfw"
  },

  "background": {
    "persistent": false,
    "scripts": [
      "js/background.js"
    ]
  },

  // Browser Action with search
  "browser_action": {
    "default_icon": {
      "19": "images/icon-128.png",
      "38": "images/icon.png"
    },
    "default_title": "My Little Face When",
    "default_popup": "popup/popup.html"
  }
}